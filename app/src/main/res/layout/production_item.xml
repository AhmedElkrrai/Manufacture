<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_106sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/_48sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_48sdp"
                android:background="#A4CACAE1" />

            <TextView
                android:id="@+id/production_item_production_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:fontFamily="@font/noto_sans_arabic_semi_bold"
                android:text="@string/date"
                android:textColor="@color/primary"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/production_item_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_above="@+id/production_item_patch_number"
                android:fontFamily="@font/noto_sans_arabic_semi_bold"
                android:text="@string/product_name"
                android:layout_marginBottom="@dimen/_8sdp"
                android:textColor="@color/primary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/production_item_patch_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_16sdp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:fontFamily="@font/noto_sans_arabic_semi_bold"
                android:text="@string/example_batch"
                android:textColor="@color/orange_pink"
                android:textSize="14sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>