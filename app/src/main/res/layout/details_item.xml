<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearlayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_85sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/details_component_name"
                    android:layout_height="match_parent"
                    style="@style/DetailsDialogTextStyle"
                    android:textColor="@color/un_active_primary"
                    android:text="@string/material" />

                <TextView
                    android:layout_height="match_parent"
                    android:id="@+id/details_component_amount"
                    style="@style/DetailsDialogTextStyle"
                    android:textColor="@color/primary"
                    android:text="@string/amount" />

                <TextView
                    android:layout_height="match_parent"
                    android:id="@+id/details_component_available_amount"
                    style="@style/DetailsDialogTextStyle"
                    android:textColor="@color/weird_green"
                    android:text="@string/available_amount" />

            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/_87sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_48sdp"
                android:layout_marginStart="@dimen/_48sdp"
                android:background="#A4CACAE1" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>