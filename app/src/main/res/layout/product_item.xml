<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_106sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/_48sdp"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginEnd="@dimen/_48sdp"
                android:background="#A4CACAE1" />

            <ImageButton
                android:visibility="gone"
                android:layout_marginStart="@dimen/_8sdp"
                android:id="@+id/product_caution"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_warning" />

            <TextView
                android:layout_marginStart="@dimen/_16sdp"
                android:id="@+id/product_name_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/product_caution"
                android:fontFamily="@font/noto_sans_arabic_semi_bold"
                android:text="@string/product_name"
                android:textColor="@color/primary"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/product_details_BT"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_68sdp"
                android:background="@drawable/edit_round_5"
                android:src="@drawable/ic_details" />

            <ImageButton
                android:id="@+id/produceBT"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/_16sdp"
                android:background="@drawable/edit_round_5"
                android:src="@drawable/ic_produce" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</layout>